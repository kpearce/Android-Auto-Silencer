<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:gravity="center_vertical|center_horizontal">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/doscan"
            android:id="@+id/button1" android:layout_column="10" android:layout_gravity="center"
            android:onClick="onChooseWifiScan"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/use_saved"
            android:id="@+id/button2" android:layout_column="10" android:onClick="onChooseSavedWifi"/>
</LinearLayout>