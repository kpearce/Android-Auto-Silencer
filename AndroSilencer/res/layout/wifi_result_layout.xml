<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:minHeight="45dp" android:gravity="end">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@id/left_wifi_result_textbox" android:layout_gravity="center|left" android:textSize="18dp"
            android:textAlignment="center" android:gravity="center_vertical" android:text="Wifi ssid"
            android:layout_marginLeft="10dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@id/wifi_strength_image_view" android:src="@drawable/ic_qs_wifi_3"
            android:layout_weight="1.21" android:layout_alignParentStart="true"
            android:textAlignment="gravity" android:layout_gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" android:paddingRight="20dp"/>
</GridLayout>